<div class='container'>
    <div class='row'>
        <div class='col-xs-12 text-center' id='top'>
            <h1>Eat A Burger</h1>
        </div>
        <div class='col-xs-6 text-center' class='task'>
            <div class='row'>
                {{#each burgers}}
                    {{#unless devoured}}<!--found in handlebars built-in helpers-->
                <div class='col-xs-9 text-center'>
                    <pre>{{id}}. {{name}}</pre>
                </div>
            <div class ='col-xs-3 text-center'>
                <form method='POST' action='/burgers/update/_method=PUT'
                class='button-size'>
                    <input type='hidden' name='burger_id' type='text'
                    value={{id}}>
                    <br>
                    <button type='submit' class='btn btn-default'>
                        Devoure it
                    </button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
            </div>
        </div>
    </div>
</div>